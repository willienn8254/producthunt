<div class="container">
	<divc class="row">

		<div class="col-sm-6 col-sm-offset-3">

			<h1>PUBLICA PRODUCTO</h1>

			<%= form_for @products do |f| %>

			<div class="form-group">
				
				<%=f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre producto "%>


			</div>

			<div class="form-group">
				
				<%=f.url_field :url, class: "form-control input-lg", placeholder: "Ingresa la url del producto"%>


			</div>



			<div class="form-group">
				
				<%=f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripcion del producto"%>


			</div>

			<div>
				
				<%= f.submit "publicar Producto", class: "btn btn-primary btn-lg btn-block" %>

			</div>



			<%end %>

			

		</div>




	</div>


</div>